# Example configuration for remote VPS deployment
# Copy this to terraform.tfvars and fill in your values

# For SSH connection (recommended for most VPS providers)
docker_host = "ssh://root@203.0.113.10:22"

# For TCP/TLS connection (if Docker daemon is exposed with TLS)
# docker_host = "tcp://203.0.113.10:2376"
# docker_ca_material   = file("path/to/ca.pem")
# docker_cert_material = file("path/to/cert.pem")
# docker_key_material  = file("path/to/key.pem")

docker_socket_path = "/var/run/docker.sock"
project_root       = "/opt/services/vault"  # Absolute path on remote host
storage_path       = "/opt/storages/vault"  # Path where data mount

vault_admin_token = "generate-a-strong-token"
vault_database_url = "postgresql://user:password@postgres:5432/vault"
vault_hostname     = "vault.example.com"
public_network_name  = "public"
kitchen_network_name = "kitchen"
