# Example configuration for remote VPS deployment
# Copy this to terraform.tfvars and fill in your values

# For SSH connection (recommended for most VPS providers)
docker_host = "ssh://root@203.0.113.10:22"

# For TCP/TLS connection (if Docker daemon is exposed with TLS)
# docker_host = "tcp://203.0.113.10:2376"
# docker_ca_material   = file("path/to/ca.pem")
# docker_cert_material = file("path/to/cert.pem")
# docker_key_material  = file("path/to/key.pem")

docker_socket_path = "/var/run/docker.sock"
project_root       = "/opt/services/kitchen"  # Absolute path on remote host
storage_path       = "/opt/storages/kitchen"  # Path where configs and data mount

cf_api_email         = "you@example.com"
cf_dns_api_token     = "your-cloudflare-token"
traefik_credential   = "user:$apr1$..."  # Generate with: htpasswd -nb user pass

mariadb_port         = 3306
mariadb_root_password = "your-secure-password"

postgres_user     = "postgres"
postgres_password = "your-secure-password"

grafana_user     = "admin"
grafana_password  = "your-secure-password"

# Routed services are enabled when a hostname is provided. Remove entries to disable.
router_hostnames = {
  traefik    = "edge.example.com"
  phpmyadmin = "pma.example.com"
  dash       = "dash.example.com"
  prometheus = "prometheus.example.com"
  grafana    = "grafana.example.com"
}

# Optional: disable databases for this environment
# enable_mariadb  = true
# enable_postgres = true
